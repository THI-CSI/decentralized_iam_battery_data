{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "vp.schema.json",
  "title": "Battery-Ecosystem Verifiable Presentation",
  "description": "Schema for verifying presentations of VCs with holder proof.",
  "type": "object",
  "required": [
    "@context",
    "type",
    "verifiableCredential",
    "holder",
    "proof"
  ],
  "additionalProperties": false,
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri",
        "enum": [
          "https://www.w3.org/2018/credentials/v1",
          "http://localhost:8443/docs/vp.schema.html"
        ]
      },
      "minItems": 2,
      "maxItems": 2,
      "uniqueItems": true,
      "description": "Defines the JSON-LD context, providing meaning to terms used in the credential."
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "contains": {
        "const": "VerifiablePresentation"
      },
      "description": "Type of the object, must include 'VerifiablePresentation'."
    },
    "verifiableCredential": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "$ref": "vc.schema.json"
      },
      "description": "Array of Verifiable Credentials being presented (only one allowed here)."
    },
    "holder": {
      "type": "string",
      "format": "uri",
      "description": "DID of the entity presenting the credentials."
    },
    "proof": {
      "title": "Proof",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "created",
        "verificationMethod",
        "challenge",
        "proofPurpose",
        "jws"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["EcdsaSecp256r1Signature2019"],
          "description": "Type of digital signature."
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Time the proof was created."
        },
        "verificationMethod": {
          "type": "string",
          "pattern": "^did:[a-z0-9]+:[a-zA-Z0-9.\\-]+#[a-zA-Z0-9_-]+$",
          "description": "The DID that identifies the public key used to verify the signature. (Holder)"
        },
        "challenge": {
          "type": "string",
          "description": "A random string provided by the Verifier upon request to prevent replay attacks."
        },
        "proofPurpose": {
          "type": "string",
          "enum": ["authentication"],
          "description": "The purpose for which the proof is provided"
        },
        "jws": {
          "type": "string",
          "description": "Signature of the Verifiable Credential."
        }
      }
    }
  }
}
