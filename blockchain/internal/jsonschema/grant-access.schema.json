{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/vc/access/grant-access.schema.json",
  "title": "grant",
  "type": "object",
  "required": ["@context", "type", "issuer", "issuanceDate", "credentialSubject", "proof"],
  "properties": {
    "@context": {"type": ["string", "array"]},
    "type": {"type": "array", "items": {"enum": ["VerifiableCredential", "AccessGrantVC"]}},
    "issuer": {"type": "string", "format": "uri"},
    "issuanceDate": {"type": "string", "format": "date-time"},
    "credentialSubject": {
      "type": "object",
      "required": ["grantee", "resource", "accessLevel"],
      "properties": {
        "grantee": {"type": "string", "format": "uri"},
        "resource": {"type": "string"},
        "accessLevel": {"enum": ["read", "write", "init-write"]}
      }
    },
    "proof": {"type": "object"}
  }
}