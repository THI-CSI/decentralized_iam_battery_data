{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/vc/access/revoke-access.schema.json",
  "title": "revocation",
  "type": "object",
  "required": ["@context", "type", "issuer", "issuanceDate", "credentialSubject", "proof"],
  "properties": {
    "@context": {"type": ["string", "array"]},
    "type": {"type": "array", "items": {"enum": ["VerifiableCredential", "AccessRevocationVC"]}},
    "issuer": {"type": "string", "format": "uri"},
    "issuanceDate": {"type": "string", "format": "date-time"},
    "credentialSubject": {
      "type": "object",
      "required": ["revokedVC"],
      "properties": {
        "revokedVC": {"type": "string"}
      }
    },
    "proof": {"type": "object"}
  }
}