{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "linked",
  "title": "BMS Linked VC",
  "type": "object",
  "required": ["@context", "type", "issuer", "issuanceDate", "credentialSubject", "proof"],
  "properties": {
    "@context": {"type": ["string", "array"]},
    "type": {"type": "array", "items": {"enum": ["VerifiableCredential", "BMSLinkedVC"]}},
    "issuer": {"type": "string", "format": "uri"},
    "issuanceDate": {"type": "string", "format": "date-time"},
    "credentialSubject": {
      "type": "object",
      "required": ["bmsId", "batteryPassId"],
      "properties": {
        "bmsId": {"type": "string"},
        "batteryPassId": {"type": "string"}
      }
    },
    "proof": {"type": "object"}
  }
}