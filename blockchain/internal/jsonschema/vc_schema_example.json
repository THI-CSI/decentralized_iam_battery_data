{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Battery Identity Verifiable Credential",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "minItems": 1
    },
    "id": {
      "type": "string",
      "pattern": "^urn:uuid:[0-9a-fA-F-]{36}$"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "contains": {
        "type": "string",
        "enum": ["VerifiableCredential"]
      }
    },
    "issuer": {
      "type": "string",
      "pattern": "^did:web:[a-zA-Z0-9:._-]+$"
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^did:xyz:[a-zA-Z0-9_-]+$"
        },
        "batteryIdentity": {
          "type": "object",
          "properties": {
            "manufacturer": { "type": "string" },
            "model": { "type": "string" },
            "batteryType": { "type": "string" },
            "passportEndpoint": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": ["manufacturer", "model", "batteryType", "passportEndpoint"]
        }
      },
      "required": ["id", "batteryIdentity"]
    },
    "proof": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Ed25519Signature2020"]
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "verificationMethod": {
          "type": "string",
          "pattern": "^did:web:[a-zA-Z0-9:._-]+#key-1$"
        },
        "proofPurpose": {
          "type": "string",
          "enum": ["assertionMethod"]
        },
        "proofValue": {
          "type": "string"
        }
      },
      "required": ["type", "created", "verificationMethod", "proofPurpose", "proofValue"]
    }
  },
  "required": ["@context", "id", "type", "issuer", "issuanceDate", "credentialSubject", "proof"]
}
