{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "vc.create",
  "required": ["proof", "payload"],
  "additionalProperties": false,
  "properties": {
    "proof": {
      "allOf": [
        { "$ref": "../../common.defs.schema.json#/definitions/Proof"},
        {
          "required": ["challenge"]
        }
      ]
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "vcHash"],
      "properties": {
        "id": { "$ref": "../../common.defs.schema.json#/definitions/URI"},
        "vcHash": { "$ref": "../../common.defs.schema.json#/definitions/vcHash"},
        "expirationDate": { "$ref": "../../common.defs.schema.json#/definitions/DateTime"}
      }
    }
  }
}