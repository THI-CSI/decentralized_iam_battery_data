{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/vc/entity/create-entity.schema.json",
  "title": "creation",
  "type": "object",
  "required": ["@context", "type", "issuer", "issuanceDate", "credentialSubject", "proof"],
  "properties": {
    "@context": {"type": ["string", "array"]},
    "type": {"type": "array", "items": {"enum": ["VerifiableCredential", "EntityCreationVC"]}},
    "issuer": {"type": "string", "format": "uri"},
    "issuanceDate": {"type": "string", "format": "date-time"},
    "credentialSubject": {
      "type": "object",
      "required": ["id", "role"],
      "properties": {
        "id": {"type": "string", "format": "uri"},
        "role": {"enum": ["EU", "OEM", "BMS", "Service"]},
        "metadata": {"type": "object"}
      }
    },
    "proof": {"type": "object"}
  }
}