{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Battery DID Document",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "minItems": 1
    },
    "id": {
      "type": "string",
      "pattern": "^did:XYZ:[a-zA-Z0-9_-]+$"
    },
    "verificationMethod": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^did:XYZ:[a-zA-Z0-9_-]+#key-1"
          },
          "type": {
            "type": "string",
            "enum": ["Ed25519VerificationKey2020"]
          },
          "controller": {
            "type": "string",
            "pattern": "^did:XYZ:[a-zA-Z0-9_-]+$"
          },
          "publicKeyMultibase": {
            "type": "string"
          }
        },
        "required": ["id", "type", "controller", "publicKeyMultibase"]
      }
    },
    "authentication": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^did:XYZ:[a-zA-Z0-9_-]+#key-1"
      }
    },
    "assertionMethod": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^did:XYZ:[a-zA-Z0-9_-]+#key-1$"
      }
    },
    "service": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^did:XYZ:[a-zA-Z0-9_-]+#.+$"
          },
          "type": {
            "type": "string",
            "enum": ["ProductPassport"]
          },
          "serviceEndpoint": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["id", "type", "serviceEndpoint"]
      }
    }
  },
  "required": ["@context", "id", "verificationMethod", "authentication", "assertionMethod", "service"]
}
